% Mini frames
\defbeamertemplate*{mini frame}{bfeld}
{%
  \begin{pgfpicture}{0pt}{0pt}{0.1cm}{0.1cm}
    \pgfpathcircle{\pgfpoint{0.05cm}{0.05cm}}{0.05cm}
    \pgfusepath{fill,stroke}
  \end{pgfpicture}%
}
[action]
{
  \setbeamersize{mini frame size=.29cm,mini frame offset=0.03cm
  }
}

\defbeamertemplate*{mini frame in current subsection}{bfeld}
{%
  \begin{pgfpicture}{0pt}{0pt}{0.1cm}{0.1cm}
    \pgfpathcircle{\pgfpoint{0.05cm}{0.05cm}}{0.05cm}
    \pgfusepath{stroke}
  \end{pgfpicture}%
}

\defbeamertemplate*{mini frame in other subsection}{bfeld}[1][50]
{\color{fg!#1!bg}\usebeamertemplate{mini frame in current subsection}}

% Navigation symbols
\defbeamertemplate*{navigation symbols}{bfeld}
{%
  \hbox{%
    \hbox{\insertslidenavigationsymbol}
    \hbox{\insertframenavigationsymbol}
    \hbox{\insertsubsectionnavigationsymbol}
    \hbox{\insertsectionnavigationsymbol}
    \hbox{\insertdocnavigationsymbol}
    \hbox{\insertbackfindforwardnavigationsymbol}%
  }%
}

% No navigation symbols in handout or trans mode:
\only<handout| trans>{\setbeamertemplate{navigation symbols}{}}

% Section and subsections in head/foot
\defbeamertemplate*{section in head/foot}{bfeld}
{\insertsectionhead}

\defbeamertemplate*{section in head/foot shaded}{bfeld}[1][50]
{ \color{fg!#1!bg}\usebeamertemplate{section in head/foot}}

\defbeamertemplate*{subsection in head/foot}{bfeld}
{\insertsubsectionhead}

\defbeamertemplate*{subsection in head/foot shaded}{bfeld}[1][50]
{\color{fg!#1!bg}\usebeamertemplate{subsection in head/foot}}

\defbeamertemplate*{subsubsection in head/foot}{bfeld}
{\insertsubsubsectionhead}

\defbeamertemplate*{subsubsection in head/foot shaded}{bfeld}[1][50]
{\color{fg!#1!bg}\usebeamertemplate{subsubsection in head/foot}}

\definecolor{bfeld@blue}{RGB}{70,80,110}

% Headline and footline
\defbeamertemplate*{headline}{bfeld}
{ \vskip 6pt
\leavevmode%
 \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=10ex,dp=5ex]{section in head/foot}%
    \ifx\insertsection\empty
		\else
			\ifx\insertsubsection\empty
				\hspace{0.3\paperwidth}{\Large\color{bfeld@blue}\thesection.~\secname}
			\else
				\hspace{0.3\paperwidth}{\Large\color{bfeld@blue}\thesection.~\thesubsection.~\subsecname}
			\fi
		\fi
    \end{beamercolorbox}%
  }
}

\defbeamertemplate*{footline}{bfeld}
{ \leavevmode%
\hskip 0.05\linewidth
  \hbox{%
  \begin{beamercolorbox}[wd=.5\linewidth,ht=2.25ex,dp=1ex,left]{author in head/foot}%
    \usebeamerfont{author in head/foot}\hspace*{3ex}\insertshortauthor~~$|$~~\insertshortinstitute
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,right]{date in head/foot}%
    \usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
    \insertframenumber{} / \inserttotalframenumber\hspace*{3ex} 
  \end{beamercolorbox}
  }%
  \hskip 0.05\linewidth
  \vskip 10pt%
}

